<mvc:View
    xmlns:tnt="sap.tnt"
    controllerName="com.myorg.myapp.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    core:require="{
        formatter: 'com/myorg/myapp/model/formatter'
    }"
>
    <Page>
        <content>
            <Table
                id="suppliersTable"
                items="{ path: '/Products' }"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title text="Suppliers Text" />
                        <ToolbarSpacer />
                        <Button
                            text="Routing course"
                            press="onHome"
                        />
                        <Button
                            text="flexible Colum"
                            press="onFlexibleColumn"
                        />
                        <SearchField
                            placeholder="please search the feild"
                            width="30%"
                            search="onSearch"
                        />
                        <Button
                            text="sort"
                            icon="sap-icon://sort"
                            press="onSortChange"
                        />
                        <Button
                            text="Filter"
                            icon="sap-icon://filter"
                        />
                        <Button
                            icon="sap-icon://add"
                            text="Add new Product"
                            press="onOpenDialog"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Id" />
                    </Column>
                    <Column>
                        <Text text="Product Name" />
                    </Column>
                    <Column>
                        <Text text="Price" />
                    </Column>
                    <Column>
                        <Text text="Rating" />
                    </Column>
                    <Column>
                        <Text text="Release Date" />
                    </Column>
                    <Column>
                        <Text text="Action" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press="onProductSelect"
                    >
                        <cells>
                            <Text text="{ID}" />
                            <Text text="{Name}" />
                            <Text text="{Price}" />
                            <Text text="{Rating}" />
                            <Text
                                text="{path: 'ReleaseDate', formatter: '.formatter.formatDate'}"
                            />
                            <HBox>
                                <Button
                                    icon="sap-icon://edit"
                                    press="onEditSupplier"
                                />
                                <Button
                                    icon="sap-icon://delete"
                                    press="onDelete"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <Dialog
            id="creatingpost"
            title="Creating new post dialog"
        >
            <VBox class="sapUiSmallMargin">
                <!-- Product ID: Numbers only -->
                <Label text="Product Id" />
                <Input
                    id="productID"
                    type="Number"
                    valueStateText="Product ID must be a number"
                    change="validateProductId"
                />

                <!-- Product Name: 10-45 characters -->
                <Label text="Product Name" />
                <Input
                    id="productName"
                    maxLength="45"
                    valueStateText="Product Name must be 10-45 characters"
                    change="validateProductName"
                />

                <!-- Rating: 1-10 -->
                <Label text="Rating" />
                <Input
                    id="rating"
                    type="Number"
                    valueStateText="Rating must be between 1 and 10"
                    change="validateRating"
                />

                <!-- Price: 100-1000 -->
                <Label text="Price" />
                <Input
                    id="price"
                    type="Number"
                    valueStateText="Price must be between 100 and 1000"
                    change="validatePrice"
                />

                <!-- Release Date: Current and future dates -->
                <Label text="Release date" />
                <DatePicker
                    id="newProductReleaseDate"
                    valueFormat="yyyy-MM-dd"
                    displayFormat="yyyy-MM-dd"
                    change="validateReleaseDate"
                />
            </VBox>

            <beginButton>
                <Button
                    text="Save"
                    press="onCreatePost"
                />
            </beginButton>

            <endButton>
                <Button
                    text="Cancel"
                    press="onCloseDialog"
                />
            </endButton>
        </Dialog>
        <Dialog
            id="updateDialog"
            title="Updating your dialogy"
        >
            <VBox class="sapUiSmallMargin">
                <Label text="ID" />
                <Input id="ID" />
                <Label text="productName" />
                <Input id="updateproductName" />
                <Label text="Price" />
                <Input id="updatePrice" />
                <Label text="Rating" />
                <Input id="updaterating" />
                <Label text="update Date" />
                <DatePicker
                    valueFormat="yyyy-MM-dd"
                    displayFormat="dd-MM-yyyy"
                    id="updateDate"
                />
            </VBox>
            <beginButton>
                <Button
                    press="onUpdatingDialog"
                    text="Update"
                />
            </beginButton>
            <endButton>
                <Button
                    press="onCloseEditingDialog"
                    text="Cancel"
                />
            </endButton>
        </Dialog>
        <Dialog
            id="DeleteDialog"
            title="Confirmation"
        >
            <VBox class="sapUiSmallMargin">
                <Text text="Are you sure you want to Delete this Item?" />
            </VBox>
            <beginButton>
                <Button
                    text="OK"
                    press="onConfirmDelete"
                    type="Critical"
                />
            </beginButton>
            <endButton>
                <Button
                    text="Cancel"
                    press="onCloseDeleteDialog"
                />
            </endButton>
        </Dialog>
    </Page>
</mvc:View>
