<mvc:View
	displayBlock="true"
	height="100%"
	xmlns="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<FlexibleColumnLayout id="flexibleColumnLayout" stateChange="onStateChanged" backgroundDesign="Solid" layout="{/layout}">
		<beginColumnPages>
			<mvc:XMLView id="beginView" viewName="com.myorg.myapp.view.FlexibleList"/>
		</beginColumnPages>
        <midColumnPages>
			<mvc:XMLView id="detailView" viewName="com.myorg.myapp.view.FlexibleListDetail"/>
		</midColumnPages>
	</FlexibleColumnLayout>
</mvc:View>